<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF1C7">



    <!-- 버튼 영역 (노란색 배경) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#FFF1C7">

        <!-- 첫 번째 줄 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🏠 홈"
                android:background="@drawable/btn_category"
                android:backgroundTint="@null"
                android:clickable="true"
                android:focusable="true"
                android:textColor="#000000"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBlood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🩸 혈당 공유"
                android:background="@drawable/btn_category"
                android:textColor="#000000"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnExercise"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🏋 운동 공유"
                android:background="@drawable/btn_category"
                android:textColor="#000000"/>
        </LinearLayout>

        <!-- 두 번째 줄 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnWalk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🚶 산책"
                android:background="@drawable/btn_category"
                android:textColor="#000000"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFood"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🥗 식품 공유"
                android:background="@drawable/btn_category"
                android:textColor="#000000"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnFree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🙋 자유게시판"
                android:background="@drawable/btn_category"
                android:textColor="#000000"
                android:singleLine="true"
                android:ellipsize="none"
                android:scrollHorizontally="true"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"/>


        </LinearLayout>

    </LinearLayout>

    <!-- 하단 영역 (게시판 내용) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#FFF1C7">
        //테스트
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="#0F6972"/>

        <TextView
            android:id="@+id/boardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="홈 게시판"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0F6972"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_board_title"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:background="#FFF1C7"/>



        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/communityContainer"
            android:layout_width="match_parent"
            android:background="#FFF1C7"
            android:layout_height="0dp"
            android:layout_weight="1" />


    </LinearLayout>
</LinearLayout>
