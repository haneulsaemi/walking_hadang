<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:padding="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 상단: 시간 Chip + 삭제 버튼 -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip_round"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="오전 8:56"
                android:textColor="#5D5D5D"
                android:textSize="12sp" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="삭제" />
        </LinearLayout>

        <!-- 제목(종류/값) -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="공복 혈당: 126 mg/dL"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#222222"/>

        <!-- 막대 -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress"
            style="@style/Widget.Material3.LinearProgressIndicator"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="12dp"
            app:trackCornerRadius="6dp"
            app:trackThickness="10dp"
            app:trackColor="#EAEAEA"
            app:indicatorColor="#64B5F6"
            app:showAnimationBehavior="outward" />

        <!-- 구간 라벨 -->
        <LinearLayout
            android:id="@+id/labelRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvBand1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="정상"
                android:textSize="12sp"
                android:textColor="#777" />

            <TextView
                android:id="@+id/tvBand2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당뇨 전단계"
                android:textSize="12sp"
                android:textColor="#777" />

            <TextView
                android:id="@+id/tvBand3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당뇨"
                android:textSize="12sp"
                android:textColor="#777" />
        </LinearLayout>

        <!-- 구간 수치표시(선택) -->
        <TextView
            android:id="@+id/tvRangeHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="정상 &lt;100 | 전단계 100–125 | 당뇨 &gt;126"
            android:textSize="11sp"
            android:textColor="#9A9A9A"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>

