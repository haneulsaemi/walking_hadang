<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 상단 필터/토글 -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/swRange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textOn="주간"
            android:textOff="오늘"
            android:textColor="@color/black"
            android:padding="12dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipTimeGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chipFasting"
                android:checkable="true"
                android:text="공복" />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:id="@+id/chipPost2h"
                android:text="식후 2h" />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:id="@+id/chipBeforeBed"
                android:text="취침 전" />
        </com.google.android.material.chip.ChipGroup>

        <!-- 식후일 때 끼니 선택 -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipMealGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:singleSelection="true">
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:id="@+id/chipBreakfast"
                android:text="아침" />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:id="@+id/chipLunch"
                android:text="점심" />
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:id="@+id/chipDinner"
                android:text="저녁" />
        </com.google.android.material.chip.ChipGroup>

        <!-- 그래프 자리 (원하는 차트 뷰로 교체) -->
        <FrameLayout
            android:id="@+id/chartContainer"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:padding="12dp" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- 스크롤 본문 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 입력 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="혈당 (mg/dL)">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/etGlucose"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddGlucose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:backgroundTint="@color/main_color"
                    android:text="기록" />
            </LinearLayout>
            <!-- 메모 입력 -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="메모">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNote"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine"
                    android:minLines="2"
                    android:gravity="top|start" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 기록 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGlucose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>