<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- ✅ NestedScrollView는 자식 1개 → 모든 뷰를 이 LinearLayout 아래에 배치 -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- [1] 입력 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGlucoseInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardBackgroundColor="#FFF5DF"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeColor="#F0E6C8"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:padding="12dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/swRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvSwitchLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘" />
                </LinearLayout>


                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipTimeGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        style="@style/Record_Chip"
                        android:id="@+id/chipFasting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="공복 혈당" />

                    <com.google.android.material.chip.Chip
                        style="@style/Record_Chip"
                        android:id="@+id/chipPost2h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="식후 2시간" />

                    <com.google.android.material.chip.Chip
                        style="@style/Record_Chip"
                        android:id="@+id/chipBeforeBed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="취침 전" />

                    <com.google.android.material.chip.Chip
                        style="@style/Record_Chip"
                        android:id="@+id/chipEtc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="기타" />
                </com.google.android.material.chip.ChipGroup>

                <Space android:layout_width="1dp" android:layout_height="8dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipMealGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    android:visibility="gone">

                    <com.google.android.material.chip.Chip
                        style="@style/Record_Chip_Secondary"
                        android:id="@+id/chipBreakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="아침" />

                    <com.google.android.material.chip.Chip
                        style="@style/Record_Chip_Secondary"
                        android:id="@+id/chipLunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="점심" />

                    <com.google.android.material.chip.Chip
                        style="@style/Record_Chip_Secondary"
                        android:id="@+id/chipDinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:text="저녁" />
                </com.google.android.material.chip.ChipGroup>

                <Space android:layout_width="1dp" android:layout_height="12dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilGlucose"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="혈당 기록하기"
                    app:suffixText="mg/dL"
                    app:boxStrokeColor="#E5D9B8"
                    app:boxBackgroundColor="@android:color/transparent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etGlucose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tvHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미입력"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="6dp"/>

                <Space android:layout_width="1dp" android:layout_height="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddGlucose"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="추가하기"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_add"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="#FFE8B2"
                    android:textColor="#5B4C22"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- [3] 주간 그래프 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/chartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/sky_blue"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 노란 헤더 -->
                <TextView
                    android:id="@+id/tvChartTitle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:text="이번 주 공복 혈당 그래프"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@color/chart_header_yellow"/>

                <!-- 차트 자리 -->
                <FrameLayout
                    android:id="@+id/chartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:padding="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/tvGlucoseEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘은 기록된 혈당이 없어요."
            android:textAlignment="center"
            android:textColor="#666666"
            android:padding="16dp"
            android:visibility="gone"/>
        <!-- [4] 오늘의 혈당(리스트) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGlucose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>