<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <!-- ✅ NestedScrollView는 자식 1개 → 모든 뷰를 이 LinearLayout 아래에 배치 -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- [1] 입력 카드 -->
        <TextView
            android:id="@+id/tvGlucoseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• 혈당 기록하기"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:includeFontPadding="false"/>

        <!-- 입력 카드: 2번과 동일 톤 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGlucoseInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="14dp"
            app:strokeWidth="1dp"
            app:strokeColor="#F0E6C8"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- (옵션) 스위치 행: 동일 톤, 기본 숨김 -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="end"
                    android:gravity="center_vertical">

                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/swRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tvSwitchLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오늘"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>

                <!-- 시간대/상황 선택 칩 -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipTimeGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:selectionRequired="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFasting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공복 혈당"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPost2h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="식후 2시간"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBeforeBed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="취침 전"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipEtc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기타"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>
                </com.google.android.material.chip.ChipGroup>

                <!-- (옵션) 끼니 세부 선택 -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipMealGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    android:visibility="gone"
                    android:layout_marginTop="6dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBreakfast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아침"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLunch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점심"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="저녁"
                        android:checkable="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>
                </com.google.android.material.chip.ChipGroup>

                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginVertical="6dp"/>

                <!-- 입력 행: 레이블 + OutlinedBox.Dense -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="76dp"
                        android:layout_height="wrap_content"
                        android:text="혈당"
                        android:textSize="14sp"
                        android:includeFontPadding="false"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilGlucose"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="혈당 기록하기"
                        app:suffixText="mg/dL"
                        app:boxStrokeColor="#D9D9D9"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etGlucose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:paddingVertical="6dp"
                            android:inputType="number"
                            android:maxLines="1"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- 우측 힌트 -->
                <TextView
                    android:id="@+id/tvHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미입력"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:layout_marginTop="6dp"/>

                <!-- 추가하기 버튼: 2번과 동일 스타일 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddGlucose"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:text="추가하기"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_add"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="#FFE8B2"
                    android:textColor="#5B4C22"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- [3] 주간 그래프 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/chartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/sky_blue"
            app:cardBackgroundColor="@android:color/transparent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 노란 헤더 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/chart_header_yellow"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvChartTitle"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:text="이번 주 혈당 그래프"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        />
                    <LinearLayout
                        android:id="@+id/dropdownButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:id="@+id/dropdownText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="공복"
                            android:textColor="@color/black"
                            android:textSize="13sp"/>

                        <ImageView
                            android:id="@+id/dropdownArrow"
                            android:layout_width="12dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_arrow_down"
                            android:paddingTop="3dp"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>


                </LinearLayout>


                <!-- 차트 자리 -->
                <FrameLayout
                    android:id="@+id/chartContainer"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:padding="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <TextView
            android:id="@+id/tvGlucoseEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘은 기록된 혈당이 없어요."
            android:textAlignment="center"
            android:textColor="#1B1717"
            android:padding="16dp"
            android:layout_marginBottom="60dp"
            android:visibility="gone"/>
        <!-- [4] 오늘의 혈당(리스트) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGlucose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>