<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 섹션 타이틀 -->
        <TextView
            android:id="@+id/tvMealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• 식단 기록하기"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:includeFontPadding="false"/>

        <!-- 입력 카드 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMealInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:strokeWidth="1dp"
            app:strokeColor="#F0E6C8"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- 끼니 선택 + 사진 버튼 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipMealGroup"
                        app:singleSelection="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipBreakfast"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="아침"
                            android:checkable="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipLunch"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="점심"
                            android:checkable="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipDinner"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="저녁"
                            android:checkable="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chipSnack"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="간식"
                            android:checkable="true"
                            style="@style/Widget.MaterialComponents.Chip.Choice"/>
                    </com.google.android.material.chip.ChipGroup>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddPhoto"
                        android:text="사진"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:icon="@drawable/ic_photo_camera"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart"
                        app:backgroundTint="#FFE8B2"
                        android:textColor="#5B4C22"
                        app:cornerRadius="24dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EFEFEF"
                    android:layout_marginVertical="6dp"/>

                <!-- 음식 입력 행 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="76dp"
                        android:layout_height="wrap_content"
                        android:text="음식"
                        android:textSize="14sp"
                        android:includeFontPadding="false"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilFoodName"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="음식 이름"
                        app:boxStrokeColor="#D9D9D9"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etFoodName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:paddingVertical="6dp"
                            android:textSize="14sp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="76dp"
                        android:layout_height="wrap_content"
                        android:text="칼로리"
                        android:textSize="14sp"
                        android:includeFontPadding="false"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilKcal"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="kcal"
                        app:boxStrokeColor="#D9D9D9"
                        app:boxStrokeWidth="1dp"
                        app:boxStrokeWidthFocused="2dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etKcal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:paddingVertical="6dp"
                            android:textSize="14sp"
                            android:inputType="number"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- 추가하기 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddFood"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="추가하기"
                    app:cornerRadius="24dp"
                    app:icon="@drawable/ic_add"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart"
                    app:backgroundTint="#FFE8B2"
                    android:textColor="#5B4C22"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 오늘 식단 리스트 -->
        <TextView
            android:id="@+id/tvTodayMeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• 오늘의 식단"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#111111"
            android:layout_marginTop="12dp"
            android:includeFontPadding="false"/>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            app:dividerColor="#E6E6E6"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMeals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            android:paddingBottom="12dp"
            android:overScrollMode="never"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>