<resources>
    <style name="Profile_Row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="Profile_RowTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Profile_RowValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Profile_RowChevron">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:src">@drawable/ic_chevron_right</item>
        <item name="android:tint">#A0A0A0</item>
    </style>

    <style name="Profile_Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#EAE3CF</item>
    </style>

    <style name="Profile_BottomIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:background">@drawable/bg_tab_icon</item> <!-- 선택시 배경용 -->
        <item name="android:scaleType">centerInside</item>
        <item name="android:tint">#252525</item>
    </style>
    <style name="Record_Chip" parent="Widget.Material3.Chip.Filter">
        <item name="android:textSize">13sp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">#EADFC3</item>
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="rippleColor">#22B39D5E</item>
        <item name="shapeAppearance">@style/Shape_Rounded_16</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- 보조 칩 (끼니 선택) -->
    <style name="Record_Chip_Secondary" parent="Record_Chip">
        <item name="chipStrokeColor">#EFE4C8</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipBackgroundColor">@color/transparent</item>
        <item name="rippleColor">#22B39D5E</item>
        <item name="shapeAppearance">@style/Shape_Rounded_16</item>
        <item name="checkedIconVisible">false</item>
    </style>

    <!-- 둥근 모서리 공통 -->
    <style name="Shape_Rounded_16">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Widget_App_QuickAction">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>